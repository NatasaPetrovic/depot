<div class="row">
  <%= form_for(@order) do |f| %>
    <% if @order.errors.any? %>
      <div id="error_explanation">
        <%= t('errors.template.header', :count=>@order.errors.size,
           :model=>t('activerecord.models.order')) %>:
        <ul>
        <% @order.errors.full_messages.each do |msg| %>
          <li class="text_error"><%=raw msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="col m6">
      <div class="col m12">
        <%= f.label :name, t('.name') + ":" %>
        <%= f.text_field :name, :size => 40 %>
      </div>
      <div class="col m12">
        <%= f.label :address, t('.address') + ":" %>
        <%= f.text_area :address, :rows => 3, :cols => 40 %>
      </div>
      <div class="col m12">
        <%= f.label :email, t('.email') + ":" %>
        <%= f.email_field :email, :size => 40 %>
      </div>
      <div class="col m12">
        <%= f.label :pay_type, t('.pay_type') + ":" %>
        <%= f.select(:pay_type, Order::PAYMENT_TYPES, {prompt: t('.pay_prompt')}, {class: 'browser-default'})%>
      </div>
      <%= f.submit t('.submit'), class: "white_text btn green waves-effect waves-light" %>
    </div>
  <% end %>
</div>
